# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = tab
trim_trailing_whitespace = true

[*.json]
indent_style = space
indent_size = 2

[lib/**/*.js]
indent_style = space
indent_size = 2

[*.html]
indent_style = space
indent_size = 2

[*.jade]
indent_style = tab
indent_size = 1
trim_trailing_whitespace = false
